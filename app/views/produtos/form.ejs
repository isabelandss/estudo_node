<html>
    <body>
        <div class="erros">
            <%if(errosValidacao) {%>
                <ul>
                    <%for(var i = 0; i < errosValidacao.length; i++) {%>
                        <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                    <%}%>
                </ul>
            <%}%>
        </div>
        <form action="/produtos" method="post">
            <div>
                <label for="id">Código</label>
                <input type="number" name="id" value="<%=produto.id%>" placeholder="Informe o código do livro">
            </div>
            <div>
                <label for="nome">Título</label>
                <input type="text" name="nome" value="<%=produto.nome%>" placeholder="Informe o título do livro">
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="number" name="preco" value="<%=produto.preco%>" placeholder="Informe o preço do livro">
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea type="text" name="descricao" value="<%=produto.descricao%>" placeholder="Informe a descricao do livro"></textarea>
            </div>
            <input type="submit" value="gravar">
        </form>
    </body>
</html>